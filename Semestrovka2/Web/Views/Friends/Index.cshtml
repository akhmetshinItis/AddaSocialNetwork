@model Guid

@{
    ViewData["Title"] = "Friends";
    var currentCategory = Context.Request.Query["category"].ToString();
}

<div class="main-wrapper">
            <!-- profile banner area start -->
            <div class="profile-banner-large bg-img" data-bg="assets/images/banner/profile-banner.jpg">
            </div>
            <!-- profile banner area end -->

            <!-- profile menu area start -->
            <div class="profile-menu-area secondary-navigation-style bg-white">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-3 col-md-3">
                            <div class="profile-picture-box">
                                <figure class="profile-picture">
                                    <a href="#">
                                        <img src="assets/images/profile/profile-1.jpg" alt="profile picture">
                                    </a>
                                </figure>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 offset-lg-1">
                            <div class="profile-menu-wrapper">
                                <div class="main-menu-inner header-top-navigation">
                                    <nav>
                                        <ul class="main-menu">
                                            <li><a href="/profile/@Model">profile</a></li>
                                            <li><a href="/photos/@Model">photos</a></li>
                                            <li><a href="/friends/@Model">friends</a></li>
                                            <!-- <li class="d-inline-block d-md-none"><a href="profile.html">edit profile</a></li> -->
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3 d-none d-md-block">
                            <div class="profile-edit-panel">
                                <button class="edit-btn">edit profile</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- profile menu area end -->

            <!-- sendary menu start -->
            <div class="menu-secondary">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="secondary-menu-wrapper secondary-menu-2 bg-white">
                                <div class="page-title-inner">
                                    <h4 class="page-title">friends</h4>
                                </div>
                                <div class="filter-menu">
                                    <a href="/friends/@Model" class="filter-button @(string.IsNullOrEmpty(currentCategory) ? "active" : "")" data-filter="*">Все</a>
                                    <a href="/friends/@Model?category=Близкие%20друзя" class="filter-button @(currentCategory == "Близкие друзя" ? "active" : "")" data-filter=".closes">Близкие друзя</a>
                                    <a href="/friends/@Model?category=Родственники" class="filter-button @(currentCategory == "Родственники" ? "active" : "")" data-filter=".relatives">Родственники</a>
                                    <a href="/friends/@Model?category=Школьные%20друзя" class="filter-button @(currentCategory == "Школьные друзя" ? "active" : "")" data-filter=".schools">Школьные друзя</a>
                                </div>
                                <div class="post-settings-bar">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                    <div class="post-settings arrow-shape">
                                        <ul>
                                            <li><button>edit profile</button></li>
                                            <li><button>activity log</button></li>
                                            <li><button>embed adda</button></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- sendary menu end -->

            <!-- photo section start -->
            <div class="friends-section mt-20">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="content-box friends-zone">
                                @await Component.InvokeAsync("FriendTable", new { userId = Model, category = currentCategory })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- photo section end -->
        </div>

<style>
    .filter-button {
        display: inline-block;
        padding: 8px 16px;
        margin: 0 4px;
        border: none;
        background: none;
        color: #666;
        cursor: pointer;
        text-decoration: none;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .filter-button:hover {
        background-color: #f0f0f0;
        color: #333;
    }

    .filter-button.active {
        background-color: #007bff;
        color: white;
    }
</style>