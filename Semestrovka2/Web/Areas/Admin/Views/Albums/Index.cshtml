@model Contracts.Requests.AdminRequests.AlbumRequests.GetAllAlbumsResponse
@{
    ViewData["Title"] = "Альбомы";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Tables</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>

    <a asp-area="Admin" asp-controller="Albums" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create Album
    </a>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Albums
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>User ID</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>User ID</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var album in Model.Albums)
                {
                    <tr>
                        <td>@album.Id</td>
                        <td>@album.Name</td>
                        <td>@album.UserId</td>
                        <td>@album.CreatedDate</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Albums" asp-action="Edit" asp-route-id="@album.Id"
                               class="btn btn-warning btn-sm me-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>

                            <form asp-area="Admin" asp-controller="Albums" asp-action="Delete" method="post"
                                  style="display:inline;" onsubmit="return confirm('Are you sure?')">
                                <input type="hidden" name="id" value="@album.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div> 