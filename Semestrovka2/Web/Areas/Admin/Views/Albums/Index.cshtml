@model Contracts.Requests.AdminRequests.AlbumRequests.GetAllAlbumsResponse
@{
    ViewData["Title"] = "Альбомы";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Панель управления</a></li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Список альбомов
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ID Пользователя</th>
                        <th>Название</th>
                        <th>Количество фото</th>
                        <th>Дата создания</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>ID Пользователя</th>
                        <th>Название</th>
                        <th>Количество фото</th>
                        <th>Дата создания</th>
                    </tr>
                </tfoot>
                <tbody>
                @foreach (var album in @Model.Albums)
                {
                    <tr>
                        <td>@album.Id</td>
                        <td>@album.UserId</td>
                        <td>@album.Name</td>
                        <td>@album.PhotoCount</td>
                        <td>@album.CreatedDate</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div> 