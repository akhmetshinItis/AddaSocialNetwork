@model Contracts.Requests.AdminRequests.FriendRequests.GetAllFriendsResponse
@{
    ViewData["Title"] = "Друзья";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Панель управления</a></li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Список друзей
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ID Пользователя</th>
                        <th>Пользователь</th>
                        <th>ID Друга</th>
                        <th>Друг</th>
                        <th>Категория</th>
                        <th>Дата создания</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>ID Пользователя</th>
                        <th>Пользователь</th>
                        <th>ID Друга</th>
                        <th>Друг</th>
                        <th>Категория</th>
                        <th>Дата создания</th>
                    </tr>
                </tfoot>
                <tbody>
                @foreach (var friend in @Model.Friends)
                {
                    <tr>
                        <td>@friend.Id</td>
                        <td>@friend.UserId</td>
                        <td>@friend.UserName</td>
                        <td>@friend.FriendId</td>
                        <td>@friend.FriendName</td>
                        <td>@friend.CategoryName</td>
                        <td>@friend.CreatedDate</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div> 