@model Core.Requests.ProfileRequests.UpdateProfile.UpdateProfileRequest
@{
    ViewData["Title"] = ViewBag.ProfileId != null ? "Редактировать профиль" : "Создать профиль";
}

<div class="container-fluid px-4">
    <h2 class="mb-4">@(ViewBag.ProfileId != null ? "Редактирование профиля" : "Создание профиля")</h2>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
            @(ViewBag.ProfileId != null ? "Редактирование профиля" : "Создание профиля")
        </div>
        <div class="card-body">
            <form asp-action="@(ViewBag.ProfileId != null ? "Edit" : "Create")"
                  asp-route-id="@ViewBag.ProfileId"
                  method="post"
                  class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="AboutMe" class="form-label">О себе</label>
                        <textarea asp-for="AboutMe" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="AboutMe" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="WorkingZone" class="form-label">Рабочая зона</label>
                        <input asp-for="WorkingZone" class="form-control" />
                        <span asp-validation-for="WorkingZone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Education" class="form-label">Образование</label>
                        <input asp-for="Education" class="form-control" />
                        <span asp-validation-for="Education" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Contacts" class="form-label">Контакты</label>
                        <input asp-for="Contacts" class="form-control" />
                        <span asp-validation-for="Contacts" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FacebookLink" class="form-label">Facebook</label>
                        <input asp-for="FacebookLink" class="form-control" />
                        <span asp-validation-for="FacebookLink" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TwitterLink" class="form-label">Twitter</label>
                        <input asp-for="TwitterLink" class="form-control" />
                        <span asp-validation-for="TwitterLink" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="GoogleLink" class="form-label">Google</label>
                        <input asp-for="GoogleLink" class="form-control" />
                        <span asp-validation-for="GoogleLink" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PinterestLink" class="form-label">Pinterest</label>
                        <input asp-for="PinterestLink" class="form-control" />
                        <span asp-validation-for="PinterestLink" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>
                            @(ViewBag.ProfileId != null ? "Сохранить" : "Создать")
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Назад
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>