@model Contracts.Requests.AdminRequests.PhotoRequests.GetAllPhotosResponse
@{
    ViewData["Title"] = "Фотографии";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Панель управления</a></li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Список фотографий
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <<tr>
                        <th>Id</th>
                        <th>User Id</th>
                        <th>Album Id</th>
                        <th>Album Name</th>
                        <th>Path</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Id</th>
                    <th>User Id</th>
                    <th>Album Id</th>
                    <th>Album Name</th>
                    <th>Path</th>
                    <th>Created Date</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var photo in @Model.Photos)
                {
                    <tr>
                        <td>@photo.Id</td>
                        <td>@photo.UserId</td>
                        <td>@photo.AlbumId</td>
                        <td>@photo.AlbumName</td>
                        <td>@photo.Path</td>
                        <td>@photo.CreatedDate</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div> 