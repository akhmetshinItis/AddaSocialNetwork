@model Contracts.Requests.AdminRequests.ChatRequests.GetAllChatsResponse
@{
    ViewData["Title"] = "Чаты";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Чаты</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Чаты</li>
    </ol>
    
    <a asp-area="Admin" asp-controller="Chats" asp-action="Create" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Добавить чат
    </a>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Чаты
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Пользователь 1</th>
                        <th>ID Пользователя 1</th>
                        <th>Пользователь 2</th>
                        <th>ID Пользователя 2</th>
                        <th>Количество сообщений</th>
                        <th>Последнее сообщение</th>
                        <th>Время последнего сообщения</th>
                        <th>Дата создания</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Пользователь 1</th>
                        <th>ID Пользователя 1</th>
                        <th>Пользователь 2</th>
                        <th>ID Пользователя 2</th>
                        <th>Количество сообщений</th>
                        <th>Последнее сообщение</th>
                        <th>Время последнего сообщения</th>
                        <th>Дата создания</th>
                        <th>Действия</th>
                    </tr>
                </tfoot>
                <tbody>
                @foreach (var chat in @Model.Chats)
                {
                    <tr>
                        <td>@chat.Id</td>
                        <td>@chat.User1Name</td>
                        <td>@chat.User1Id</td>
                        <td>@chat.User2Name</td>
                        <td>@chat.User2Id</td>
                        <td>@chat.MessagesCount</td>
                        <td>@chat.LastMessageContent</td>
                        <td>@chat.LastMessageTime</td>
                        <td>@chat.CreatedDate</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Chats" asp-action="Edit" asp-route-id="@chat.Id" class="btn btn-warning btn-sm me-1">
                                <i class="fas fa-edit"></i> Редактировать
                            </a>
                            <form asp-area="Admin" asp-controller="Chats" asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Вы уверены?')">
                                <input type="hidden" name="id" value="@chat.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div> 