@model Contracts.Requests.AdminRequests.UserRequests.GetAllUsersResponse
@{
    ViewData["Title"] = "Пользователи";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Tables</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>

    <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create User
    </a>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Users
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>Country</th>
                    <th>Image URL</th>
                    <th>Identity User ID</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>Country</th>
                    <th>Image URL</th>
                    <th>Identity User ID</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Gender</td>
                        <td>@user.Age</td>
                        <td>@user.Country</td>
                        <td>@user.ImageUrl</td>
                        <td>@user.IdentityUserId</td>
                        <td>@user.CreatedDate</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"
                               class="btn btn-warning btn-sm me-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>

                            <form asp-area="Admin" asp-controller="Users" asp-action="Delete" method="post"
                                  style="display:inline;" onsubmit="return confirm('Are you sure?')">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
